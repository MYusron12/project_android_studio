<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="18dp"
            android:fontFamily="@font/righteous"
            android:text="UNIVERSITAS\nMUHAMMADIYAH\nBANTEN"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            android:textSize="28sp" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/righteous"
            android:text="PROFIL MAHASISWA"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bgformmhs"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="14dp"
                android:fontFamily="@font/righteous"
                android:text="Nama"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/updel_nama"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bgfieldmhs" />

            <TextView
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="14dp"
                android:fontFamily="@font/righteous"
                android:text="NIM"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/updel_nim"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bgfieldmhs" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_marginLeft="14dp"
                android:fontFamily="@font/righteous"
                android:text="Jurusan"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/updel_jurusan"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/bgfieldmhs" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="150dp">

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="94dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_button"
                    android:fontFamily="@font/righteous"
                    android:hint="EDIT"
                    android:textColorHint="#ffffff" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="94dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_button"
                    android:fontFamily="@font/righteous"
                    android:hint="DELETE"
                    android:textColorHint="#ffffff" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>